{
    "config": {
        "bootstrap": "../../vendor/autoload.php"
    },
    "commit-msg": {
        "enabled": false,
        "actions": [
            {
                "action": "\\CaptainHook\\App\\Hook\\Message\\Action\\Beams",
                "options": {
                    "subjectLength": 50,
                    "bodyLineLength": 72
                }
            }
        ]
    },
    "pre-push": {
        "enabled": false,
        "actions": []
    },
    "pre-commit": {
        "enabled": true,
        "actions": [
            {
                "action": "./vendor/bin/phplint --configuration=./tests/config/.phplint.yml",
                "options": []
            },
            {
                "action": "./vendor/bin/php-cs-fixer fix --config ./tests/config/.php-cs-fixer.php --allow-risky=yes",
                "options": []
            }
        ]
    },
    "prepare-commit-msg": {
        "enabled": false,
        "actions": []
    },
    "post-commit": {
        "enabled": false,
        "actions": []
    },
    "post-merge": {
        "enabled": false,
        "actions": []
    },
    "post-checkout": {
        "enabled": false,
        "actions": []
    },
    "post-rewrite": {
        "enabled": false,
        "actions": []
    },
    "post-change": {
        "enabled": false,
        "actions": []
    }
}
